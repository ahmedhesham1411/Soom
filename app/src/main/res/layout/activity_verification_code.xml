<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verification_code"
    android:background="@color/appbackground"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="start"
        android:background="@color/appbackground"
        android:id="@+id/toolbar">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:layout_gravity="center" />


    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_yout_code"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layoutDirection="ltr"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/first_vCode"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@id/second_vCode"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/second_vCode"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:backgroundTint="@color/white"
                    android:inputType="number"
                    android:maxLength="1"
                    android:nextFocusDown="@id/third_vCode"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/third_vCode"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:backgroundTint="@color/white"
                    android:inputType="number"
                    android:maxLength="1"
                    android:nextFocusDown="@id/fourth_vCode"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/fourth_vCode"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:backgroundTint="@color/white"
                    android:inputType="number"
                    android:maxLength="1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/fifth_vCode"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:backgroundTint="@color/white"
                    android:inputType="number"
                    android:maxLength="1"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/six_vCode"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:backgroundTint="@color/white"
                    android:inputType="number"
                    android:maxLength="1" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"/>

            <Button
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn3"
                android:text="@string/verify"
                android:textColor="@color/white"
                android:id="@+id/verify_code"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>